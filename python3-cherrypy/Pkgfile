# Description:  A pythonic, object-oriented web development framework
# URL:          https://cherrypy.org
# Maintainer:   Lin SiFuh, #crux at irc dot libera dot chat 	 	
# Depends on:   python3-setuptools python3-pip python3-wheel python3-setuptools-scm python3-cheroot python3-portend python3-jaraco python3-more-itertools python3-zc.lockfile python3-six python-tempora python-pytz

name=python3-cherrypy
_name=${name//python3-}
version=18.6.0
release=1
source=(https://github.com/${_name}/${_name}/archive/v${version}/${name}-${version}.tar.gz)

build() {

  export SETUPTOOLS_SCM_PRETEND_VERSION="${version}"
  export WEBTEST_INTERACTIVE=0
  export PYTHONHASHSEED=0

  cd "${_name}"-"${version}"

  python3 setup.py build

  python3 ./setup.py install --prefix=/usr --root="${PKG}" --optimize=1

  find "${PKG}" -type d -empty -delete

}
