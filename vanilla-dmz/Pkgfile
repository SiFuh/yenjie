# Description: 	Xcursors for HDPI screens
# URL: 		Vanilla-DMZ
# Packager:	
# Maintainer:	Lin SiFuh, #crux at freenode dot net 	
# Depends on:  

name=vanilla-dmz
version=0.4
release=1
source=(http://ponce.cc/slackware/sources/repo/$name-$version.tar.bz2)

build () {

	mkdir -p $PKG/usr/share/icons/
	cp -rf Vanilla-DMZ $PKG/usr/share/icons/
	
	rm $PKG/usr/share/icons/Vanilla-DMZ/COPYING

}
